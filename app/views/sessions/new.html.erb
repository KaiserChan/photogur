<h1>Log in</h1>


<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>

<% if flash[:alert] %>
<%= flash[:alert] %>
<% end %>

<br>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %><br/>
    <%= text_field_tag :email, params[:email] %>
  </div>

  <br>

  <div class="field">
    <%= label_tag :password %><br/>
    <%= password_field_tag :password %>
  </div>

  <br>

  <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>
